<!doctype html>
<html>
<head>
    <title>Merde de Macaco</title>
    <!-- <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> -->
    <!-- <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> -->
    <link rel="stylesheet" href="style.css">
</head>
<body>
  <a class="firstBtn" href="/">
    <button type="button" name="button">Back to Menu</button>
  </a>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">
    <h1>Merda de Macaco</h1>
    <h2>Login to account</h2>

    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/login" method="post">
        <div class="form-group">
            <input type="text" class="form-control" name="email" placeholder="Email">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password">
        </div>

        <button class="loginBtns" type="submit" >Login</button>
    </form>
    <!-- Signup Form -->
    <h2>Signup for an account</h2>
    <form action="/signup" method="post">
        <div class="form-group">
            <input type="text" class="form-control" name="email" placeholder="Email">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password">
        </div>

        <button class="loginBtns" type="submit" >Signup</button>
    </form>


</div>
</div>
</body>
</html>
